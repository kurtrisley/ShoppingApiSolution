{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Verbose",
    "WriteTo": {

      "Args": {
        "name": "RollingFile",
        "logDirectory": ".\\Logs",
        "fileSizeLimitBytes": 104857600,
        "pathFormat": "Logs/ShoppingApi.{Date}.log",
        "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Excepetion}"
      }
    }
  }
}
